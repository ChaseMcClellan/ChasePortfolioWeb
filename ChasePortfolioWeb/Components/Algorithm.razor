<h5>Digital root in C#</h5>
<input type="number" @bind="@n" /><button class="btn-success" @onclick="() => DigitalRoot(n)">Go</button>
<label>Digital root: @n</label>




@code{
    private int rootNumber;
    private int n;

    private int DigitalRoot(int n)
    {
        if (n < 10) return n;
        return DigitalRoot(n % 10 + DigitalRoot(n / 10));
    }
}